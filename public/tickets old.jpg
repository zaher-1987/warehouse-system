<!DOCTYPE html>
<html>
<head>
  <title>All Tickets</title>
  <meta charset="UTF-8" />
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 30px;
    }
    h1 {
      text-align: center;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 30px;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 10px;
    }
    .status-pending { background-color: #fff3cd; }
    .status-open { background-color: #d1ecf1; }
    .status-delayed { background-color: #f8d7da; }
  </style>
</head>
<body>
  <h1>ðŸ“‹ Tickets Overview</h1>
  <table>
    <thead>
      <tr>
        <th>Warehouse</th>
        <th>Item ID</th>
        <th>Quantity</th>
        <th>Request Date</th>
        <th>Collect Date</th>
        <th>Status</th>
        <th>Created By</th>
      </tr>
    </thead>
    <tbody id="ticketBody"></tbody>
  </table>

  <script>
    fetch('/tickets')
      .then(res => res.json())
      .then(data => {
        const tbody = document.getElementById("ticketBody");

        data.forEach(ticket => {
          const tr = document.createElement('tr');
          tr.classList.add(`status-${ticket.status}`);

          tr.innerHTML = `
            <td>${ticket.warehouse_name || ''}</td>
            <td>${ticket.item_id}</td>
            <td>${ticket.quantity}</td>
            <td>${ticket.request_date}</td>
            <td>${ticket.collect_date}</td>
            <td>${ticket.status.toUpperCase()}</td>
            <td>${ticket.created_by}</td>
          `;

          tbody.appendChild(tr);
        });
      });
  </script>
</body>
</html>